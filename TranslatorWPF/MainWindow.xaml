<Window x:Class="TranslatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="C++ to Flowchart Translator" Height="900" Width="1600" WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200" MinHeight="100"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#DDDDDD">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="New_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Open..." Click="Open_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Save" Click="Save_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save As..." Click="SaveAs_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Translate" Click="Translate_Click" InputGestureText="Ctrl+T"/>
                <MenuItem Header="Clear Errors" Click="ClearErrors_Click"/>
            </MenuItem>
            <MenuItem Header="Export Diagram">
                <MenuItem Header="Export as PNG" Click="ExportPNG_Click"/>
                <MenuItem Header="Export as Mermaid Code" Click="ExportMermaid_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Основной контент (верхняя часть) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: редактор C++ -->
            <Grid Grid.Column="0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#F9F9F9">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="C++ Code:"
                               Margin="10"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="#333333"/>

                    <TextBlock Grid.Column="1"
                               Text="Вставьте C++ код и нажмите Translate"
                               Margin="10,10,10,10"
                               VerticalAlignment="Center"
                               Foreground="#666666"
                               FontSize="11"/>

                    <Button Grid.Column="2"
                            x:Name="TranslateButton"
                            Content="Translate"
                            Click="Translate_Click"
                            Margin="0,10,10,10"
                            Padding="14,6"
                            Background="#0078D4"
                            Foreground="White"
                            BorderBrush="#005A9E"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            FontWeight="Bold"/>
                </Grid>

                <!-- Редактор с номерами строк -->
                <Grid Grid.Row="1" Background="#FAFAFA">
                    <Grid.ColumnDefinitions>
                        <!-- Колонка для номеров строк -->
                        <ColumnDefinition Width="50"/>
                        <!-- Колонка для самого редактора -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Номера строк -->
                    <ScrollViewer x:Name="LineNumberScrollViewer"
                                  Grid.Column="0"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="#F0F0F0">
                        <TextBlock x:Name="LineNumbersTextBlock"
                                   FontFamily="Consolas"
                                   FontSize="13"
                                   Foreground="#888888"
                                   Margin="5,10,5,10"
                                   TextAlignment="Right"
                                   Text="1"/>
                    </ScrollViewer>

                    <!-- Поле ввода C++ кода -->
                    <TextBox x:Name="CppCodeTextBox"
                             Grid.Column="1"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="13"
                             Padding="10"
                             Margin="0"
                             Background="#FAFAFA"
                             Foreground="#222222"
                             BorderThickness="0"
                             TextChanged="CppCodeTextBox_TextChanged"
                             ScrollViewer.ScrollChanged="CppCodeTextBox_ScrollChanged"/>
                </Grid>
            </Grid>

            <!-- Разделитель -->
            <Grid Grid.Column="1" Background="#DDDDDD"/>

            <!-- Правая панель: диаграмма Mermaid -->
            <Grid Grid.Column="2" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Flowchart Preview:"
                           Margin="10"
                           FontWeight="Bold"
                           Foreground="#333333"/>

                <wv2:WebView2 x:Name="DiagramView"
                              Grid.Row="1"
                              Margin="0"/>
            </Grid>
        </Grid>

        <!-- Разделитель (горизонтальный) -->
        <Grid Grid.Row="2" Background="#DDDDDD" Cursor="SizeNS"/>

        <!-- Нижняя панель: окно ошибок -->
        <Grid Grid.Row="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#F0F0F0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Errors and Warnings:"
                           Margin="10"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#333333"/>

                <TextBlock x:Name="ErrorCountTextBlock"
                           Grid.Column="1"
                           Text="0 errors"
                           Margin="10"
                           VerticalAlignment="Center"
                           Foreground="#666666"
                           FontSize="11"/>

                <Button Grid.Column="2"
                        Content="Clear"
                        Click="ClearErrors_Click"
                        Margin="0,5,10,5"
                        Padding="10,4"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderBrush="#C0392B"
                        Cursor="Hand"
                        VerticalAlignment="Center"/>
            </Grid>

            <ListBox x:Name="ErrorsListBox"
                     Grid.Row="1"
                     Background="#FAFAFA"
                     BorderThickness="0"
                     Margin="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Message}" 
                                           Foreground="#C0392B"
                                           FontWeight="Bold"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding Location}"
                                           Foreground="#7F8C8D"
                                           FontSize="10"
                                           Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>